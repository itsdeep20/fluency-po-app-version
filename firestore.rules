rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Queue collection (for matchmaking rooms)
    match /queue/{roomId} {
      // Allow all authenticated users to read room status
      // This prevents "Permission Denied" resets during rapid transitions
      allow read: if request.auth != null;
      
      // Allow participants to update room (for typing status, etc.)
      allow update: if request.auth != null && (
        resource.data.createdBy == request.auth.uid ||
        resource.data.hostId == request.auth.uid ||
        resource.data.userId == request.auth.uid ||
        resource.data.player2Id == request.auth.uid
      );
      
      // Messages subcollection
      match /messages/{messageId} {
        // Allow participants to read and write messages
        allow read, write: if request.auth != null && (
          get(/databases/$(database)/documents/queue/$(roomId)).data.createdBy == request.auth.uid ||
          get(/databases/$(database)/documents/queue/$(roomId)).data.hostId == request.auth.uid ||
          get(/databases/$(database)/documents/queue/$(roomId)).data.userId == request.auth.uid ||
          get(/databases/$(database)/documents/queue/$(roomId)).data.player2Id == request.auth.uid
        );
      }
    }
    
    // Users collection (for stats)
    match /users/{userId} {
      // Users can read and write their own data
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Sessions subcollection
      match /sessions/{sessionId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // Feedback collection
    match /feedback/{feedbackId} {
      allow create: if request.auth != null;
      allow read: if false;
    }
    
    // Presence collection (online status tracking)
    match /presence/{userId} {
      // Anyone authenticated can read all presence data (to see who's online)
      allow read: if request.auth != null;
      // Users can only write their own presence
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Invitations collection (match invitations)
    match /invitations/{recipientId} {
      // Anyone authenticated can read invitations they're part of
      allow read: if request.auth != null && (
        request.auth.uid == recipientId || 
        resource.data.fromUserId == request.auth.uid
      );
      
      // Allow write (create/update/delete) if:
      // 1. User is the recipient (can accept/decline/delete), OR
      // 2. User is setting themselves as the sender (request.resource.data.fromUserId)
      allow write: if request.auth != null && (
        request.auth.uid == recipientId ||
        request.resource.data.fromUserId == request.auth.uid
      );
    }
    
    // Rooms collection (for battle matchmaking)
    match /rooms/{roomId} {
      // Allow all authenticated users to read room status
      allow read: if request.auth != null;
      
      // Allow any authenticated user to create a room
      allow create: if request.auth != null;
      
      // Allow participants to update room (for status, analysis, typing, etc.)
      allow update: if request.auth != null && (
        resource.data.createdBy == request.auth.uid ||
        resource.data.hostId == request.auth.uid ||
        resource.data.player1Id == request.auth.uid ||
        resource.data.player2Id == request.auth.uid
      );
      
      // Messages subcollection
      match /messages/{messageId} {
        // Allow participants to read and write messages
        allow read, write: if request.auth != null && (
          get(/databases/$(database)/documents/rooms/$(roomId)).data.createdBy == request.auth.uid ||
          get(/databases/$(database)/documents/rooms/$(roomId)).data.hostId == request.auth.uid ||
          get(/databases/$(database)/documents/rooms/$(roomId)).data.player1Id == request.auth.uid ||
          get(/databases/$(database)/documents/rooms/$(roomId)).data.player2Id == request.auth.uid
        );
      }
    }
    
    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
