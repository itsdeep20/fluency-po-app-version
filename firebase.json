{
    "firestore": {
        "rules": "firestore.rules"
    },
    "functions": {
        "source": "backend",
        "runtime": "python311",
        "codebase": "default",
        "ignore": [
            "venv",
            ".git",
            "firebase-debug.log",
            "firebase-debug.*.log"
        ]
    },
    "hosting": {
        "public": "dist",
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**"
        ],
        "rewrites": [
            {
                "source": "**",
                "destination": "/index.html"
            }
        ]
    }
}